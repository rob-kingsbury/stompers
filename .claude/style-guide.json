{
  "meta": {
    "project": "Stompers Redesign",
    "version": "1.1.0",
    "updated": "2026-01-06",
    "description": "Design tokens and style reference for Stompers immersive website. All values sync with themes.css"
  },

  "breakpoints": {
    "sm": "576px",
    "md": "768px",
    "lg": "992px",
    "xl": "1200px"
  },

  "colors": {
    "backgrounds": {
      "--color-bg": "#0a0a0a",
      "--color-bg-rgb": "10, 10, 10",
      "--color-bg-alt": "#111111",
      "--color-surface": "#1a1a1a",
      "--color-surface-raised": "#222222"
    },
    "text": {
      "--color-text": "#f5f5f0",
      "--color-text-rgb": "245, 245, 240",
      "--color-text-secondary": "rgba(255, 255, 255, 0.8)",
      "--color-text-muted": "rgba(255, 255, 255, 0.6)"
    },
    "accent": {
      "--color-accent": "#c9a227",
      "--color-accent-rgb": "201, 162, 39",
      "--color-accent-light": "#d4b84a",
      "--color-accent-dark": "#a8861f"
    },
    "border": {
      "--color-border": "rgba(255, 255, 255, 0.1)",
      "--color-border-strong": "rgba(255, 255, 255, 0.2)"
    }
  },

  "spacing": {
    "--spacing-xs": "0.25rem",
    "--spacing-sm": "0.5rem",
    "--spacing-md": "1rem",
    "--spacing-lg": "1.5rem",
    "--spacing-xl": "2rem",
    "--spacing-2xl": "3rem",
    "--spacing-3xl": "4rem",
    "--spacing-4xl": "6rem",
    "--spacing-5xl": "8rem",
    "--spacing-6xl": "10rem"
  },

  "typography": {
    "families": {
      "--font-mono": "'IBM Plex Mono', monospace",
      "--font-serif": "'Source Serif Pro', Georgia, serif"
    },
    "sizes": {
      "--font-size-xs": "0.75rem",
      "--font-size-sm": "0.875rem",
      "--font-size-md": "1rem",
      "--font-size-lg": "1.25rem",
      "--font-size-xl": "1.5rem",
      "--font-size-2xl": "2rem"
    },
    "weights": {
      "--font-weight-normal": "400",
      "--font-weight-medium": "500",
      "--font-weight-semibold": "600",
      "--font-weight-bold": "700"
    },
    "letterSpacing": {
      "--letter-spacing-tight": "-0.02em",
      "--letter-spacing-normal": "0",
      "--letter-spacing-wide": "0.025em",
      "--letter-spacing-wider": "0.05em",
      "--letter-spacing-widest": "0.1em",
    "--letter-spacing-ultra": "0.2em",
    "--letter-spacing-extreme": "0.3em"
    },
    "lineHeight": {
      "--line-height-tight": "1.1",
      "--line-height-snug": "1.25",
      "--line-height-normal": "1.5",
      "--line-height-relaxed": "1.625"
    }
  },

  "zIndex": {
    "_note": "Power of 9 scale. Count the 9s to know the layer depth. Shim values (91, 992, etc.) for between-layer stacking.",
    "scale": {
      "--z-base": "auto",
      "--z-raised": "9",
      "--z-fixed": "99",
      "--z-overlay": "999",
      "--z-critical": "9999"
    },
    "shimExamples": {
      "between-raised-and-fixed": "91, 92, 93...",
      "between-fixed-and-overlay": "991, 992, 993...",
      "between-overlay-and-critical": "9991, 9992, 9993..."
    }
  },

  "timing": {
    "durations": {
      "--duration-fast": "150ms",
      "--duration-normal": "200ms",
      "--duration-slow": "300ms",
      "--duration-slower": "500ms"
    },
    "easing": {
      "--ease-standard": "cubic-bezier(0.4, 0.0, 0.2, 1)",
      "--ease-out": "cubic-bezier(0.0, 0.0, 0.2, 1)",
      "--ease-in": "cubic-bezier(0.4, 0.0, 1, 1)",
      "--ease-out-expo": "cubic-bezier(0.16, 1, 0.3, 1)",
      "--ease-out-back": "cubic-bezier(0.34, 1.56, 0.64, 1)"
    }
  },

  "borders": {
    "--border-width": "1px",
    "--border-width-thick": "2px",
    "--border-width-heavy": "3px",
    "--radius-sm": "2px",
    "--radius-md": "4px",
    "--radius-lg": "8px",
    "--radius-full": "9999px"
  },

  "shadows": {
    "--shadow-sm": "0 1px 2px rgba(0, 0, 0, 0.3)",
    "--shadow-md": "0 2px 8px rgba(0, 0, 0, 0.4)",
    "--shadow-lg": "0 4px 16px rgba(0, 0, 0, 0.5)",
    "--shadow-xl": "0 8px 32px rgba(0, 0, 0, 0.6)",
    "--shadow-2xl": "0 16px 64px rgba(0, 0, 0, 0.7)",
    "--shadow-upward": "0 -10px 40px rgba(0, 0, 0, 0.3)"
  },

  "sections": {
    "hero": {
      "videoScale": "1 to 1.3 on scroll",
      "overlayOpacity": "50% to 85% gradient"
    },
    "about": {
      "imageReveal": "clip-path inset animation",
      "imageScale": "1.4 to 1"
    },
    "bandCards": {
      "stackOffset": "30px between cards",
      "scaleDown": "1 to 0.9 when next card overlaps"
    },
    "quote": {
      "charStagger": "0.008s between characters",
      "shrinkScale": "1 to 0.9",
      "shrinkRadius": "0 to 24px"
    }
  },

  "components": {
    "progressNav": {
      "pillBg": "var(--color-surface)",
      "pillRadius": "var(--radius-full)",
      "blobGradient": "linear-gradient(var(--color-accent), var(--color-accent-dark))",
      "dotSize": "10px",
      "dotGap": "var(--spacing-sm)"
    },
    "stackCards": {
      "width": "calc(100% - var(--spacing-5xl))",
      "minHeight": "85vh",
      "borderRadius": "var(--spacing-lg)",
      "topOffset": "var(--spacing-xl) base + 30px per card"
    },
    "hamburgerMenu": {
      "containerBg": "rgba(var(--color-bg-rgb), 0.9)",
      "containerRadius": "var(--radius-lg)",
      "menuBg": "linear-gradient(var(--color-bg), var(--color-bg-alt))"
    }
  },

  "references": {
    "metamask": "https://metamask.io/en-GB/",
    "concom": "https://concom.tv/",
    "stomp": "https://stomp.cloud/"
  }
}
