{
  "meta": {
    "project": "Stompers Redesign",
    "version": "1.0.0",
    "updated": "2026-01-05",
    "description": "Design tokens and style reference for Stompers immersive website"
  },

  "breakpoints": {
    "sm": "576px",
    "md": "768px",
    "lg": "992px",
    "xl": "1200px"
  },

  "colors": {
    "backgrounds": {
      "bg": "#0a0a0a",
      "bg-alt": "#111111",
      "progress-pill": "#242628"
    },
    "text": {
      "primary": "#f5f5f0",
      "muted": "rgba(245, 245, 240, 0.7)"
    },
    "accent": {
      "gold": "#c9a227",
      "gold-dark": "#a07d1c"
    }
  },

  "cssVariables": {
    "colors": {
      "--color-bg": "#0a0a0a",
      "--color-bg-alt": "#111111",
      "--color-text": "#f5f5f0",
      "--color-accent": "#c9a227"
    }
  },

  "typography": {
    "families": {
      "headers": "IBM Plex Mono",
      "body": "Source Serif Pro"
    },
    "googleFonts": [
      "IBM+Plex+Mono:wght@400;500;600;700",
      "Source+Serif+Pro:wght@400;600;700"
    ]
  },

  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem"
  },

  "zIndex": {
    "base": "1",
    "sticky": "9",
    "nav": "99",
    "modal": "999",
    "critical": "9999"
  },

  "animations": {
    "gsap": {
      "scrubDuration": "true (follows scroll)",
      "easeDefault": "power2.out",
      "easeScroll": "none (linear for scrub)"
    },
    "css": {
      "transitionFast": "0.15s ease",
      "transitionNormal": "0.3s ease",
      "transitionSlow": "0.5s ease"
    }
  },

  "sections": {
    "hero": {
      "videoScale": "1 to 1.3 on scroll",
      "overlayOpacity": "50% to 85% gradient"
    },
    "about": {
      "imageReveal": "clip-path inset animation",
      "imageScale": "1.4 to 1"
    },
    "bandCards": {
      "stackOffset": "30px between cards",
      "scaleDown": "1 to 0.9 when next card overlaps"
    },
    "quote": {
      "charStagger": "0.008s between characters",
      "shrinkScale": "1 to 0.9",
      "shrinkRadius": "0 to 24px"
    }
  },

  "components": {
    "progressNav": {
      "pillBg": "#242628",
      "pillRadius": "999px",
      "blobGradient": "linear-gradient(135deg, #c9a227, #a07d1c)",
      "dotSize": "10px",
      "dotGap": "10px"
    },
    "stackCards": {
      "width": "calc(100% - 4rem)",
      "minHeight": "70vh",
      "borderRadius": "1rem",
      "topOffset": "2rem base + 30px per card"
    },
    "scrollCue": {
      "width": "1px",
      "height": "60px",
      "color": "var(--color-accent)"
    }
  },

  "references": {
    "metamask": "https://metamask.io/en-GB/",
    "concom": "https://concom.tv/"
  }
}
